"""

                        #YENİ DOSYA AÇIP ORAYA RANDOM HASHTAG YAZ

import tweepy
import csv
import pandas as pd

consumer_key = 'CONSUMER_KEY'
consumer_secret = 'CONSUMER_SECRET'
access_token = 'ACCESS_TOKEN'
access_token_secret = 'ACCESS_SECRET'

auth = tweepy.OAuthHandler(consumer_key, consumer_secret)
auth.set_access_token(access_token, access_token_secret)
api = tweepy.API(auth,wait_on_rate_limit=True)
#####TWEET_NAME    ->->->Araştırılacak tweetin ismi
# Dosya yaratıldı.
csvFile = open('TWEET_FILE_NAME.csv', 'a')        #tweet lerin yazıldığı dosyanın ismi bu satıra yazılır.
#csv Writer kullanıldı.
csvWriter = csv.writer(csvFile)


for tweet in tweepy.Cursor(api.search,q='#TWEET_NAME',count=3,
                           lang="en",
                           since="2019-06-20").items():    #bu satırda tarihi biz ayarlarız. "YIL-AY-GÜN" şeklinde
    print (tweet.created_at, tweet.text)
csvWriter.writerow([tweet.created_at, tweet.text.encode('utf-8')])

